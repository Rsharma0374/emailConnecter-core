<Appenders>
    <RollingFile name="File" fileName="/opt/logs/emailConnector/emailConnector.log"
                 filePattern="/opt/logs/emailConnector/emailConnector-%d{yyyy-MM-dd}.log.gz">
        <PatternLayout>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
        </PatternLayout>
        <Policies>
            <TimeBasedTriggeringPolicy />
        </Policies>
    </RollingFile>
</Appenders>
